{
	"name": "lcov-action",
	"version": "0.5.0",
	"description": "Comments a pull request with the lcov code coverage",
	"license": "MIT",
	"author": "Jagoda Ślązak",
	"repository": "https://github.com/j-g00da/lcov-action",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.1",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.27.4",
		"@babel/node": "^7.27.1",
		"@babel/preset-env": "^7.27.2",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"babel-jest": "^30.0.2",
		"core-js": "3",
		"jest": "^30.0.4",
		"prettier": "^3.6.0",
		"regenerator-runtime": "^0.14.1",
		"rollup": "^4.44.0",
		"rollup-plugin-node-externals": "^8.0.1"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"useBuiltIns": "usage",
					"corejs": 3
				}
			]
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.js",
			"<rootDir>/src/**/*_test.js"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"trailingComma": "all"
	}
}
